<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tp4.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TextField fx:id="text" promptText="0 ou 1 = 1" />
   <GridPane>
     <columnConstraints>
       <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
     <Button fx:id="zero" mnemonicParsing="false" onAction="#onOneCliecked" text="0" />
      <Button fx:id="or" onAction="#onOrClicked" text="OU" GridPane.columnIndex="1" />
     <Button fx:id="one" mnemonicParsing="false" onAction="#onOneCliecked" text="1" GridPane.rowIndex="1" />
     <Button fx:id="and" mnemonicParsing="false" onAction="#onAddClicked" text="ET" GridPane.columnIndex="1" GridPane.rowIndex="1" />
     <Button fx:id="eqal" mnemonicParsing="false" onAction="#onEqualClicked" text="=" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   </GridPane>
</VBox>
